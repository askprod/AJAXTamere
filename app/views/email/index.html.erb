<html>   
    <head>
        <%= render 'header' %>
    </head>

    <body>
        <div class="container">    
            <div class='mails'>
            <h1>mailbox</h1>
                <% @emails.each do |f| %>
                    <%= link_to email_path(f.id), remote: true do %>
                        <div class="mailcontainer-one email_<%=f.id%>">
                                Email NÂ° <%= f.id %> <br>
                                From: <%= f.sender %><br>
                                <span id="new" class="attribute_<%= f.id %>">NEW!</span>
                                <br>
                                <div class="buttoncontainer">
                                    <%= link_to email_path(f.id), remote: true, method: :delete,  data: { confirm: "Are you sure you want to delete #{f.sender}'s email?" } do %>
                                        <button class="deletebutton">X</button>
                                    <% end %>
                                </div>
                        </div>
                    <% end %>
                <% end %>
            </div>
            <div id="read" style="display:none">
            </div>
        </div>
    </body>
</html>